<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
    	<resources>
			<resource id="Magento_Backend::admin">
				<resource id="Magedelight_Base::root">
					<resource id="Magedelight_Base::md_modules">
						<resource id="Magedelight_Bundlediscount::root" title="Bundle Discount" sortOrder="10" >
							<resource id="Magedelight_Bundlediscount::gridmanager_categories" title="Tag Category" sortOrder="10" />
							<resource id="Magedelight_Bundlediscount::gridmanager_template" title="Add Tag" sortOrder="20" />
							<resource id="Magedelight_Bundlediscount::bundlediscount" title="Bundle Promos" sortOrder="30"/>
                            <resource id="Magedelight_Bundlediscount::tagscategories" title="Tag Category Action" sortOrder="40" />
                            <resource id="Magedelight_Bundlediscount::tags" title="Add Tag Action" sortOrder="50" />
                            <resource id="Magedelight_Bundlediscount::bundlepromos" title="Bundle Promos Action" sortOrder="60"/>
						</resource>
					</resource>
				</resource>
				<resource id="Magento_Backend::stores">
					<resource id="Magento_Backend::stores_settings">
						<resource id="Magento_Config::config">
							<resource id="Magedelight_Base::config_root">
								<resource id="Magedelight_Bundlediscount::config_bundlediscount" title="Configuration" sortOrder="40"/>
							</resource>
						</resource>
					</resource>
				</resource>
			</resource>
		</resources>
	</acl>
</config>
